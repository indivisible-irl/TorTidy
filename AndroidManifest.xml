<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indivisible.tortidy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.indivisible.tortidy.TestMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.indivisible.tortidy.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- ui activities -->
        <activity
            android:name="com.indivisible.tortidy.ui.LabelManagerActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- test activities -->
        <activity
            android:name="com.indivisible.tortidy.test.TestTorHandler"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.indivisible.tortidy.PrefsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.indivisible.tortidy.test.TestTextView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.indivisible.tortidy.test.TestDbLabels"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.indivisible.tortidy.test.TestDbTorrents"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.indivisible.tortidy.ui.LabelMultiSelectDialog"
            android:label="@string/title_activity_label_multi_select_dialog" >
        </activity>
    </application>

</manifest>
